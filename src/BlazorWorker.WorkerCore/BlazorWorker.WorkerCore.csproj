<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Configurations>Debug;Release;Nuget</Configurations>
    <Version>1.3.0</Version>
    <Authors>Tor Knutsson (Tewr)</Authors>
    <Company>Tor Knutsson (Tewr)</Company>
    <Product>BlazorWorker</Product>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>BlazorWorker.WorkerCore.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="LinkerConfig.xml">
      <LogicalName>$(MSBuildProjectName).xml</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <BlazorLinkerDescriptor Include="LinkerConfig.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0-rc.2.20475.17" />
  </ItemGroup>

</Project>
